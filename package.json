{
	"name": "code-review-mentat",
	"version": "0.1.0",
	"description": "AI-powered CLI tool for automated code review of pull requests",
	"license": "MIT",
	"module": "src/index.ts",
	"bin": {
		"crm": "./code-review"
	},
	"scripts": {
		"build": "bun build src/index.ts --compile --outfile code-review",
		"install:global": "bun run build && chmod +x code-review && npm link",
		"uninstall:global": "npm unlink -g code-review-mentat",
		"start": "bun run src/index.ts",
		"lint": "bun biome check",
		"lint:fix": "biome check --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/bun": "latest",
		"globals": "^16.5.0",
		"jiti": "^2.6.1"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"type": "module",
	"dependencies": {
		"@anthropic-ai/claude-agent-sdk": "^0.1.75",
		"@clack/prompts": "^0.11.0",
		"@langchain/anthropic": "^1.3.0",
		"@langchain/core": "^1.1.7",
		"@langchain/mcp-adapters": "^1.1.1",
		"chalk": "^5.6.2",
		"env-paths": "^3.0.0",
		"langchain": "^1.2.2",
		"simple-git": "^3.30.0"
	}
}
